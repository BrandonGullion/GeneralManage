            <!--#endregion-->
            
            <!--#region TimeSlot Controls -->
            <local:TimeSlotControl DayOfWeek="00" Grid.Column="1"/>
            
            <Border Grid.Column="1"
                    Grid.Row="1"
                    Grid.RowSpan="7"
                    Style="{StaticResource LineBreakGradientW/OFade}"
                    HorizontalAlignment="Left"/>

