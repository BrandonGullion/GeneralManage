            <Border Grid.Column="23"
                    Grid.Row="1"
                    Grid.RowSpan="7"
                    Style="{StaticResource LineBreakGradientW/OFade}"
                    HorizontalAlignment="Left"/>

            <Border Grid.Column="23"
                    Grid.Row="1"
                    Grid.RowSpan="7"
                    Style="{StaticResource LineBreakGradient}"
                    HorizontalAlignment="Center"/>
            <local:TimeSlotControl DayOfWeek="23" Grid.Column="24"/>
            
            <Border Grid.Column="24"
                    Grid.Row="1"
                    Grid.RowSpan="7"
                    Style="{StaticResource LineBreakGradientW/OFade}"
                    HorizontalAlignment="Left"/>

            <Border Grid.Column="24"
                    Grid.Row="1"
                    Grid.RowSpan="7"
                    Style="{StaticResource LineBreakGradient}"
                    HorizontalAlignment="Center"/>
            
            <!--#endregion--> 
    
            <!--#region  Days of the week -->
            <TextBlock Text="Sunday"
                       Margin="5 5 5 15"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <Border Style="{StaticResource LineBreakGradientW/OFade}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="24"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource LightGreyBrush}"
                    Opacity="0.4"/>

            <TextBlock Text="{Binding SundayDate, UpdateSourceTrigger=PropertyChanged, FallbackValue=Example}"
                       Margin="5 20 5 5"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <Border Style="{StaticResource LineBreakGradientW/OFade}"
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="24"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource LightGreyBrush}"
                    Opacity="0.4"/>

            <TextBlock Text="Monday"
                       Grid.Row="2"
                       Margin="5 5 5 15"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="0"/>

            <Border Style="{StaticResource LineBreakGradientW/OFade}"
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="24"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource LightGreyBrush}"
                    Opacity="0.4"/>
            
            <TextBlock Text="{Binding MondayDate, UpdateSourceTrigger=PropertyChanged, FallbackValue=Example}"
                       Grid.Row="2"
                       Margin="5 20 5 5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="0"/>

            <Border Style="{StaticResource LineBreakGradientW/OFade}"
                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="24"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource LightGreyBrush}"
                    Opacity="0.4"/>

            <TextBlock Text="Tuesday"
                       Grid.Row="3"
                       Margin="5 5 5 15"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <Border Style="{StaticResource LineBreakGradientW/OFade}"
                    Grid.Row="5"
                    Grid.Column="1"
                    Grid.ColumnSpan="24"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource LightGreyBrush}"
                    Opacity="0.4"/>
            
            <TextBlock Text="{Binding TuesdayDate, FallbackValue=Example, UpdateSourceTrigger=PropertyChanged}"
                       Grid.Row="3"
                       Margin="5 20 5 5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <Border Style="{StaticResource LineBreakGradientW/OFade}"
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="24"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource LightGreyBrush}"
                    Opacity="0.4"/>

            <TextBlock Text="Wednesday"
                       Grid.Row="4"
                       Margin="5 5 5 15"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <TextBlock Text="{Binding WednesdayDate, UpdateSourceTrigger=PropertyChanged, FallbackValue=Example}"
                       Grid.Row="4"
                       Margin="5 20 5 5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            
            <TextBlock Text="Thursday"
                       Margin="5 5 5 15"
                       Grid.Row="5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <TextBlock Text="{Binding ThursdayDate, UpdateSourceTrigger=PropertyChanged, FallbackValue=Example}"
                       Margin="5 20 5 5"
                       Grid.Row="5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
    
            <TextBlock Text="Friday"
                       Margin="5 5 5 15"
                       Grid.Row="6"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <TextBlock Text="{Binding FridayDate, UpdateSourceTrigger=PropertyChanged, FallbackValue=Example}"
                       Margin="5 20 5 5"
                       Grid.Row="6"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            
            <TextBlock Text="Saturday"
                       Margin="5 5 5 15"
                       Grid.Row="7"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <TextBlock Text="{Binding SaturdayDate, FallbackValue=Example, UpdateSourceTrigger=PropertyChanged}"
                       Margin="5 20 5 5"
                       Grid.Row="7"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <!--#endregion-->
            
            <!--#region Lists for Weekdays -->
    
            <!-- Sunday List -->
            <ListView Grid.Row="1"
                      Grid.Column="1"
                      Background="Transparent"
                      Grid.ColumnSpan="24"
                      SelectedItem="{Binding SelectedShift, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ItemsSource="{Binding SundayList, UpdateSourceTrigger=PropertyChanged}"
                      HorizontalAlignment="Stretch"
                      BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:AppointmentItemControl HorizontalAlignment="Left"
                                                      Margin="{Binding Margin, Converter={MarginConverter:MarginToThicknessConverter}}"
                                                      Width="{Binding Width}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Monday List -->
            <ListView Grid.Row="2"
                      Background="Transparent"
                      Grid.Column="1"
                      Grid.ColumnSpan="24"
                      SelectedItem="{Binding SelectedShift, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
